<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <Button
            android:text="Start Emergency Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_startEmergency"
            android:onClick="onBtnStartEmergencyClicked"
            tools:layout_editor_absoluteX="66dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Stop Emergency Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_stopEmergency"
            android:onClick="onBtnStopEmergencyClicked"
            tools:layout_editor_absoluteX="66dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_emergencyStatus"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="86dp" android:id="@+id/textView_emergencyStatus"
            android:text="Emergency not started" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_startEmergency"/>
</android.support.constraint.ConstraintLayout>